<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<a href="/">Homepage</a>

<h3><%= @post.id %></h3>
<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<h4><%= @post.created_at %></h4>
<h4><%= @post.updated_at %></h4>

<ul>

    <li><%= link_to "Edit", edit_post_path(@post) %></li><br>
    <li><%= link_to "Destroy", post_path(@post), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                        } %></li>
</ul>